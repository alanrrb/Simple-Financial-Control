<h1>Editar conta</h1>

<% form_for(@conta) do |f| %>
  <%= f.error_messages %>
  <table>
	<tr>
		<td><%= f.label :nome %></td>
		<td><%= f.text_field :nome %></td>
	</tr>
	<tr>
		<td><%= f.label :descricao %></td>
		<td><%= f.text_field :descricao %></td>
	</tr>
  </table>
  <p>
    <%= f.submit 'Atualizar' %>
  </p>
<% end %>

<%= link_to 'Mostrar', @conta %> |
<%= link_to 'Voltar', contas_path %>