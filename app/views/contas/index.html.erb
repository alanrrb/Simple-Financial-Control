<h1>Listar contas</h1>

<table>
  <tr>
	<th>Nome</th>
	<th>Descrição</th>
	<th>Tipo Conta</th>
  </tr>

<% @contas.each do |conta| %>
  <tr>
	<td><%= conta.nome%></td>
	<td><%= conta.descricao%></td>
	<td><%= conta.tipo_conta.nome %></td>
    <td><%= link_to 'Show', conta %></td>
    <td><%= link_to 'Edit', edit_conta_path(conta) %></td>
    <td><%= link_to 'Destroy', conta, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova conta', new_conta_path %>